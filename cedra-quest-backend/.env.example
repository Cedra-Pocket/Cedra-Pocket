# Development Environment Variables Template
# Copy this file to .env and fill in your actual values

# Server
PORT=3333

# Database - Replace with your actual database credentials
DATABASE_URL="postgresql://username:password@host:port/database_name"
DIRECT_URL="postgresql://username:password@host:port/database_name"

# Database credentials for Docker Compose
POSTGRES_DB="cedra_quest_dev"
POSTGRES_USER="cedra_user"
POSTGRES_PASSWORD="your-secure-postgres-password"

# JWT - Generate a strong secret (min 32 characters)
JWT_SECRET="your-super-secure-jwt-secret-change-this"
JWT_EXPIRES_IN="7d"

# Telegram - Get from @BotFather
TELEGRAM_BOT_TOKEN="your-telegram-bot-token"

# Redis (optional for development)
REDIS_HOST="localhost"
REDIS_PORT="6379"
REDIS_PASSWORD="your-secure-redis-password"

# Blockchain - Replace with your network
CEDRA_RPC_URL="https://rpc.cedra.network"
PRIVATE_KEY="your-private-key-here"

# Social APIs (optional)
TWITTER_API_KEY=""
TWITTER_API_SECRET=""